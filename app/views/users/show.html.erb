<section class="section-xs">
  <div class="container-lg">

    <h1 class="show-user-title">Profile</h1>

    <div>
      <%= render @user %>
      <% unless current_user.nil? %>
        <% if current_user == @user || current_user.role == "admin" %>
          </br>
          <div class="show-user-edit">
            <%= link_to "EDIT PROFILE", edit_profile_path, class: "show-user-edit__anchor button button--primary button--sm" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <nav class="show-user-nav">
      <ul class="show-user-nav__links">
        <li class="li">
          <a href="<%= user_path(@user.username) %>" class="show-user-nav__links-tweets">
            Tweets (<%= @user.tweets.size%>)
          </a>
          <hr class="hr"/>
        </li>
        <li class="li">
          <a href="<%= like_path(@user.username) %>" class="show-user-nav__links-likes">
            Likes (<%= @user.likes.size%>)
          </a>
        </li>
      </ul>
    </nav>

    </br>

    <div id="tweets">
      <% @my_tweets.each do |tweet| %>
        <%= render "tweets/tweet_card", tweet: tweet %>
      <% end %>
    </div>
  </div>
</section>