<%= form_for(@user, url: signup_path) do |f| %>
  <div class="field">
    <%= f.label :username, class: "create-user-data__label" %>
    <%= f.text_field :username, class: "create-user-data__field"%>
  </div>

  </br>

  <div class="field">
    <%= f.label :email, class: "create-user-data__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "create-user-data__field" %>
  </div>

  </br>

  <div class="field">
    <%= f.label :name, class: "create-user-data__label" %>
    <%= f.text_field :name, class: "create-user-data__field"%>
  </div>

  </br>

  <div>
    <%= f.label :avatar, class: "create-user-data__label" %>
    <%= f.file_field :avatar %>
  </div>

  </br>

  <div class="field">
    <%= f.label :password, class: "create-user-data__label" %>
    <% if @minimum_password_length %>
    <em class = "create-user-data__info">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "********", class: "create-user-data__field" %>
  </div>

  </br>

  <div class="field">
    <%= f.label :password_confirmation, class: "create-user-data__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "********", class: "create-user-data__field" %>
  </div>

  </br>

  <div class="actions">
    <%= f.submit "SIGN UP", class: "button button--primary button--sm w-full" %>
  </div>
<% end %>